{
	"name": "zenscript-language-server",
	"displayName": "ZenScript Language Server",
	"description": "ZenScript Language Server",
	"author": "raylras",
	"license": "MIT",
	"version": "0.7.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Raylras/zenscript-language-server"
	},
	"publisher": "raylras",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		""
	],
	"engines": {
		"vscode": "^1.78.0"
	},
	"activationEvents": [
		"onLanguage:zenscript"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "zenscript",
				"aliases": [
					"ZenScript"
				],
				"extensions": [
					".zs"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zenscript",
				"scopeName": "source.zs",
				"path": "./language/ZenScript.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "ZenScript Language Server",
			"properties": {
				"zenscript.languageServer.debug": {
					"order": 0,
					"type": "boolean",
					"default": false,
					"description": "Enable/disable debug mode for language server"
				},
				"zenscript.languageServer.suspend": {
					"order": 1,
					"type": "boolean",
					"default": false,
					"description": "Suspend to wait for the debugger to attach"
				},
				"zenscript.languageServer.javaHome": {
					"order": 2,
					"type": "string",
					"default": null,
					"description": "Path of java home"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && npm run yaml2json",
		"watch": "tsc -w -p ./",
		"yaml2json": "cd ./src && yamljson ZenScript.tmLanguage.yaml > ../language/ZenScript.tmLanguage.json",
		"package": "vsce package"
	},
	"dependencies": {
		"vscode-languageclient": "^8.1.0"
	},
	"devDependencies": {
		"@types/node": "^20.2.0",
		"@types/vscode": "^1.78.0",
		"@vscode/vsce": "^2.19.0",
		"typescript": "^5.0.4",
		"yamljson": "^1.0.70"
	}
}
